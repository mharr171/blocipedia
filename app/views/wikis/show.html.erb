<div class="row">
  <div class="col-md-8">
    <% if policy(User).admin? || policy(User).premium? %>
      <h2><%= @wiki.title %></h2>
      <p><%= @wiki.body %></p>
    <% else %>
      <h2>This wiki is private</h2>
      <p>You do not have access to this wiki</p>
    <% end %>
  </div>
  <div class="col-md-4">
    <% if policy(@wiki).update? %>
      </br>
      <% if user_signed_in? %>
        <%= link_to "Edit", edit_wiki_path(@wiki), class: 'btn btn-success btn-sm' %>
        <%= link_to "Delete", [@wiki], method: :delete, class: 'btn btn-danger btn-sm', data: { confirm: 'Are you sure you want to delete this wiki?' } %>
      <% end %>
    <% else %>
      </br>
    <% end %>
  </div>
</div>
