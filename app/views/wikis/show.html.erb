<div class="row">
  <% if @show %>
    <div class="col-md-8">
      <h2><%= @wiki.title %></h2>
      <p><%= markdown(@wiki.body) %></p>
    </div>
    <div class="col-md-4">
      <br />
      <% if user_signed_in? %>
        <%= link_to "Edit", edit_wiki_path(@wiki), class: 'btn btn-success btn-sm' %>
        <%= link_to "Delete", [@wiki], method: :delete, class: 'btn btn-danger btn-sm', data: { confirm: 'Are you sure you want to delete this wiki?' } %>
      <% end %>
      <br />
      <% if @wiki.private %>
        <div>
          <h4>Collaborators</h4>
          <ul class='collaborators'>
            <%= render partial: 'collaborators', collection: @wiki.collaborators %>
          </ul>
          <br />
          <%= link_to "Add Collaborator", new_wiki_collaborator_path(@wiki), class: 'btn btn-success' if @wiki.private %>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="col-md-12">
      <%= render 'notfound' %>
    </div>
  <% end %>
</div>
